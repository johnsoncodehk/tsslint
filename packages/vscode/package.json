{
	"private": true,
	"name": "vscode-tsslint",
	"version": "3.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/johnsoncodehk/tsslint.git",
		"directory": "packages/vscode"
	},
	"sponsor": {
		"url": "https://github.com/sponsors/johnsoncodehk"
	},
	"icon": "icon.png",
	"main": "./extension.js",
	"displayName": "TSSLint",
	"description": "The TSSLint VSCode Extension",
	"author": "johnsoncodehk",
	"publisher": "johnsoncodehk",
	"engines": {
		"vscode": "^1.82.0"
	},
	"activationEvents": [
		"onLanguage"
	],
	"contributes": {
		"typescriptServerPlugins": [
			{
				"name": "@tsslint/typescript-plugin",
				"enableForWorkspaceTypeScriptVersions": true
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "rm -rf node_modules && npm install --no-package-lock",
		"pack": "vsce package && rm -rf node_modules && pnpm install",
		"publish": "vsce publish && rm -rf node_modules && pnpm install"
	},
	"dependencies": {
		"@tsslint/typescript-plugin": "3.0.1"
	},
	"devDependencies": {
		"@types/vscode": "^1.82.0",
		"@vscode/vsce": "latest"
	}
}
